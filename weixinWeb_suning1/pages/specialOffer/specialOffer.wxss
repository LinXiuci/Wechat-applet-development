}
.Ten-products{
    width: 100rpx;
    font-size: 26rpx;
    color: #ffffff;
    font-weight: bold;

    position: relative;
    bottom: 350rpx;
    left: 570rpx;
    border-radius: 15rpx;
    border: rgb(250, 248, 249) 1px solid;
}

.Title{
    position: relative;
    bottom:150rpx;
    display: flex;
    align-items: center;/* 垂直居中 */
    justify-content: center;/* 水平居中 */
    color:#fff;
    font-family: PingFangSC-Medium;
    font-weight: bold; 
}

.imageSrc-arce{
    width: 220rpx;
    height: 330rpx;
    float: left;
    margin-left: 15rpx;
    margin-top: 20rpx;
}

.imageSrc-arce image{   
    width: 220rpx;
    height: 220rpx;
    display: flex;
    justify-content: center;
    align-items: center;   
}

.src-name{
    width: 200rpx;
    color: #5D6D7E;
    font-size: 23rpx;
    margin: auto;
    white-space: nowrap;
    overflow: hidden;
